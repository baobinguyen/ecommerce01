<div class="center jumbotron">
  <p>
    <h3>Total price:
      <%= number_to_currency(@cart.sub_total) %></h3>
  </p>
  <ul class="users">
    <% @cart.order_items.each do |order_item| %>
      <%= render "shared/product" , :product => order_item.product %>
      <li>Quantity:
        <%= order_item.quantity %>
        | Total Price:
        <%= number_to_currency(order_item.total_price) %>
        <!-- See lineItem section below for explanation of line_item links -->
        <hr class="style18">
      </li>
      <% end %>
  </ul>

</div>
