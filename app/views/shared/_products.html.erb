<div class="center jumbotron">
  <h2>
    <% if params[:search].blank?  %>
      <%= t("shared.products.products_all") %> (<%= Product.count %>)
    <%else %>
      Found => [
      <%= pluralize(Product.count, " ] Product") %>
    <%end %>
  </h2>

<!-- Search -->
  <%= form_tag(root_url, :method => "get", id: "search-form") do %>
    <div class="input-group" id="adv-search">
      <%= text_field_tag :search, params[:search], placeholder: "Search..." , class: "form-control" %>
      <div class="input-group-btn">
        <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
        <span class="glyphicon glyphicon-search"></span>
      <% end %>
      </div>
    </div>
    <% end %>

<!-- Only Admin is allowed to create new products -->
  <% if logged_in? %>
    <%= link_to new_product_path , class: "btn btn-success" do %>
      <i class="glyphicon glyphicon-plus" ></i>
      <%= t("shared.products.products_create") %>
    <%end %>
  <% end %>
  <%#= will_paginate @products %>
  <%= will_paginate @products %>

  <ul class="users">
    <% if @products.present? %>
      <%= render @products %>
<%# @products.each do |product| %>
<%#= render 'shared/product' , product: product %>
  <%# end %>

  <%= will_paginate @products %>

  <% else %>
    <p>
      <br/><br/><hr/>
      <%= t("shared.products.products_info") %>
      <strong><%= params[:search] %></strong>
      <%= t("shared.products.products_info1") %>
    </p>
  <% end %>
  </ul>
